<%= form_with(model: study_set, url: [@folder, study_set]) do |form| %>
  <% if study_set.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(study_set.errors.count, "error") %> prohibited this study_set from being saved:</h2>

      <ul>
        <% study_set.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <%= fields_for :study_config do |study_config_fields| %>
    <div>
      <%= study_config_fields.label :term_lang, style: "display: block" %>
      <%= study_config_fields.select :term_lang, StudyConfig::LANGUAGES %>
    </div>

    <div>
      <%= study_config_fields.label :definition_lang, style: "display: block" %>
      <%= study_config_fields.select :definition_lang, StudyConfig::LANGUAGES %>
    </div>
  <% end %>

  <div>
    <%= form.submit class: 'btn-success' %>
  </div>
<% end %>
