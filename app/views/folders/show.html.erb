<div class="flex justify-between">
  <h2 class="font-bold text-2xl">
    <%= @folder.name %>
  </h2>

  <div class="flex gap-2">
    <%= render(UI::ButtonComponent.new(text: 'Add study set', options: { as: :a, href: new_folder_study_set_path(@folder) })) %>
    <%= render(UI::ButtonComponent.new(variant: :secondary, text: 'Edit', options: { as: :a, href: edit_folder_path(@folder) })) %>
    <%= render(UI::ButtonComponent.new(variant: :danger, text: 'Delete', options: { as: :a, href: folder_path(@folder), method: :delete, data: { confirm: "Are you sure?" } })) %>
  </div>
</div>

<div class="grid grid-cols-4 gap-3 mt-4">
  <% @folder.study_sets.each do |study_set| %>
    <%= render(UI::CardComponent.new(as: :a, href: folder_study_set_path(@folder, study_set))) do %>
      <%= study_set.name %>
    <% end %>
  <% end %>
</div>
