<div class="my-6 w-4/5 md:w-1/2 mx-auto flex flex-col gap-6">
  <%= content_tag :div, class: class_names('text-xl font-bold mt-4') do %>
    <h3 class=<%= class_names(result_color) %>>
      <%= successful %> of <%= total %> exercises passed without errors
    </h3>
  <% end %>

  <div class="my-6">
    <% if failed_terms.load.any? %>
      <p class="text-lg mb-2">
        <% if failed_terms.count == 1 %>
          This term needs
        <% else %>
          These terms need
        <% end %>
        some extra attention
      </p>

      <ul>
        <% failed_terms.each do |term| %>
          <li class="text-lg">
            <strong><%= term.term %></strong> - <%= term.definition %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-xl">
        Great job! 💪🏻 🎉
      </p>
    <% end %>
  </div>

  <div>
    <%= render(UI::ButtonComponent.new(
      text: 'Go to dashboard',
      variant: 'neutral',
      options: { as: :a, href: dashboard_path, autofocus: true }))
    %>
  </div>
</div>
